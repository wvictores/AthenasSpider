@model AthenasSpider.Models.Order


@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-success">
    <h2>Order #@Model.OId
    </h2>
    <p>Your order is complete. An e-mail confirmation has been sent.</p>
    <table class="table table-striped">
        @foreach (var item in Model.ProdOrders)
        {
            <tr>
                <td>@item.ProdVariant.Product.ItemName</td>
                <td>@item.ProdVariant.Product.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </table>
</div>
@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })

