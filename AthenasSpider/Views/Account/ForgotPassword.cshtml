
<div class="jumbotron libre">
    <p>Enter the email address associated with your account. If the account exists, we'll send you an email with instructions to reset your password.</p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="email" class="control-label">Email Address</label>
            @Html.TextBox("email", "", new { @class = "form-control", placeholder = "email address" })
        </div>
        <input type="submit" class="btn btn-default" />
    }
</div>
